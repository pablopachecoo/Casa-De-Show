@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
body { background-image:
    url("https://wallpapertag.com/wallpaper/full/d/8/6/121781-club-background-1920x1200-windows.jpg");
    background-repeat: repeat-x;
    background-color: lightblue;
    background-size: 1920px 906px;
    }
#fundo {
    width: 1920px;
    height: 1080px;
 }
  #content {
  width: 700px ;
  margin-left: auto ;
  margin-right: 7.5cm;
  margin-top: 3cm;
  text-align:center;
}
</style>
<body>
<div id="content">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Login</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label >Senha</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Esqueci a senha</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
