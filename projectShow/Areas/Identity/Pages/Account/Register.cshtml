@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastro de usu√°rio";
}
<style>
body {
    background-image: url("https://wallpapertag.com/wallpaper/full/d/8/6/121781-club-background-1920x1200-windows.jpg");
    background-repeat: repeat-x;
    background-color: lightblue;
    background-size: 1920px 906px;
    }
 #fundo {
    width: 1920px;
    height: 1080px;
    }
  #content {
  width: 700px ;
  margin-left: auto ;
  margin-right: 10cm;
  margin-top: 3cm;
  text-align:center;
  }
  h1{
    position: absolute;
    bottom: 90%;
    left: 50%;
    transform: translate(-50%,-50%);
    margin: 0;
    padding: 0;
    font-size: 50px;
    font-family: Noto, Impact;
    color: #7021F3;
    text-shadow: 2px 2px #000000;
    text-transform: uppercase;
    transition-duration: 1s;
    -webkit-background-clip: text;
      }
      h1:hover{
      letter-spacing: 9px;
      }      
}
</style>

<body>
<div id="content">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1>Cadastro</h1>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Nome"></label>
                <input asp-for="Input.Nome" class="form-control" />
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Idade"></label>
                <input asp-for="Input.Idade" class="form-control" />
                <span asp-validation-for="Input.Idade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Adm"></label>
                <input asp-for="Input.Adm" class="form-control" />
                <span asp-validation-for="Input.Adm" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Cadastrar</button>
        </form>
    </div>
</div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
